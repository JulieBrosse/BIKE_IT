<div class="container">
  <div class="cards">
    <div class="picture">
     <%= image_tag(@bike.picture, class: "bike-picture") %>
   </div>
    <h2><%= @bike.title %></h2>
    <p><%= @bike.description %></p>
  </div>

  <%= simple_form_for @bike_rent, html: { class: "my-simple_form" } do |f| %>
    <%= f.input :booking_date, html5: true  %>
    <%= f.submit "Book now!", class: "btn btn-success" %>
  <% end %>
</div>
