<h1>All bikes available around ******* address ******* </h1>

<div class="container">
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-md-4">
        <div class="card" style="background-image: url(<%= @bikes.picture %>);">
          <h2><%= link_to bike.title, bike_path(bike) %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>
